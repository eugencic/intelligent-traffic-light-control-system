{
  "expo": {
    "name": "traffic-insights-app",
    "slug": "traffic-insights-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-font",
        {
          "web": {
            "fonts": [
              {
                "family": "Inter",
                "weights": ["400"],
                "files": ["./assets/resources/fonts/Inter-Regular.ttf"]
              }
            ]
          },
          "android": {
            "fonts": [
              {
                "family": "Inter",
                "weight": "normal",
                "asset": "./assets/resources/fonts/Inter-Regular.ttf"
              }
            ]
          },
          "ios": {
            "supportsTablet": true,
            "fonts": [
              {
                "family": "Inter",
                "weight": "normal",
                "asset": "./assets/resources/fonts/Inter-Regular.ttf"
              }
            ]
          }
        }
      ]
    ]
  }
}
